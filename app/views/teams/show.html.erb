<p>
  <b>Division:</b>
  <%= @team.division.title %>
</p>
<p>
  <%= image_tag(@team.logo, :size=>"100x100") %>
</p>
<p>
  <b>Name:</b>
  <%= @team.name %>
</p>

<p>
  <b>Generalmanageer:</b>
  <%= @team.generalManageer %>
</p>

<p>
  <b>City:</b>
  <%= @team.city %>
</p>

<p>
  <b>Arena:</b>
  <%= @team.arena %>
</p>

<p>
  <b>Yearfounded:</b>
  <%= @team.yearfounded %>
</p>


<h1>Players</h1>

<table align="center" width="90%", heigh="60%">
  <tr >
    <th>Jerseynumber</th>
    <th>Name</th>
    <th>Yearspro</th>
    <th>Height</th>
    <th>Weight</th>
    <th>Rookieyear</th>
    <th>Nationality</th>
	<th>Position</th>
  </tr>

<% @team.players.each do |player| %>
  <tr align="center" >
    <td><%= player.jerseynumber %></td>
    <td><%= link_to player.name,player %></td>
    <td><%= player.yearspro %></td>
    <td><%= player.height %></td>
    <td><%= player.weight %></td>
    <td><%= player.rookieyear %></td>
    <td><%= player.nationality %></td>
	<td><%= player.position.position %></td>
  </tr>
<% end %>
</table>
<h3>Please leave a comment:</h3>
<%= form_for([@team, Post.new], :remote => true) do |f|%>
	<%= f.text_area :content, :rows=>3 %>
	<div class="actions" >
		<%= f.submit "Post a comment"%>
	</div>
<% end %>
<% if @team.posts.empty? %>
	<h3>You are the first to comment</h3>
<% else %>
	<div id ="posts">
	<% @team.posts.reverse.each do |post|%>
	<p><%= post.content %>
		posted: <%= time_ago_in_words(post.created_at) %>ago by
		<%= link_to "Delete?", [@team, post], method: :delete %>
		<%= post.user.name %>
	<% end %>
	</div>
<% end %>
<div align ="right">
|<%= link_to 'Back', teams_path() %> |
</div>

