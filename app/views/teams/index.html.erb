<h1>Teams </h1>
<table align="center" width="90%", heigh="60%">
  <tr>
	<th>Division</th>
	<th>Logo</th>
    <th>Title</th>
    <th>Generalmanageer</th>
    <th>City</th>
    <th>Arena</th>
    <th>Year found</th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.division.title  %></td>
	<td><%= image_tag(team.logo, :size=>"50x50") %></td>
    <td><%= link_to team.name,team %></td>
    <td><%= team.generalManageer %></td>
    <td><%= team.city %></td>
    <td><%= team.arena %></td>
    <td><%= team.yearfounded %></td>
  </tr>
<% end %>
</table>

